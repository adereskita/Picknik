<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            cardview:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/image_collcetion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:foreground="@drawable/gradient_black"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_black">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_marginTop="70dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_centerHorizontal="true"
                    android:text="Trending This Week"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_centerHorizontal="true"
                    android:text="Most popular restaurant in town"
                    android:textColor="#fff"
                    android:layout_below="@+id/tv_title"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_marginHorizontal="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_desc"
                    android:text="1976 Places"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeMinTextSize="6sp"
                    android:autoSizeTextType="uniform"/>




            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>