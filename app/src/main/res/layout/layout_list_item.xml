<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    android:id="@+id/data_item">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="160dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">

        <ImageView
            android:id="@+id/circleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@color/bg_color" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_alignTop="@id/circleImage"
        android:layout_alignStart="@id/circleImage"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="160dp"
        tools:ignore="NotSibling"
        android:layout_alignLeft="@id/circleImage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:id="@+id/nTempat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeTextType="uniform"
            android:text="Warunk Upnormal"
            android:textColor="#000" />

        <TextView
            android:id="@+id/nLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nTempat"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:autoSizeMaxTextSize="10sp"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"
            android:text="Buah Batu, Bandung" />

    </RelativeLayout>

</RelativeLayout>